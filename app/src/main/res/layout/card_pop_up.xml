<!-- fragment_card_popup.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#00FFFFFF"
    android:clickable="true"
    android:focusable="true">
    
    <!-- Card Content for the Pop-up -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/light_blue"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/light_green">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clubName"
                android:textColor="@color/black"
                android:text="Club Name: Club XYZ" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pickupLocation"
                android:textColor="@color/black"
                android:text="Pickup Location: Location XYZ" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stockLeft"
                android:textColor="@color/black"
                android:text="Stock Left: 25" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:text="Additional Information: Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/availability"
                android:textColor="@color/black"
                android:text="Time: 10:00 AM - 6:00 PM" />
            
            <!-- fragment_card_popup.xml -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:focusable="true">
                
                <!-- Card Content for the Pop-up -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/light_green"
                    app:cardCornerRadius="10dp">
                    
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:rowCount="6"
                        android:background="@color/light_green">
                        
                        
                        <CheckBox
                            android:id="@+id/checkboxVegan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Vegan" />
                        
                        <CheckBox
                            android:id="@+id/checkboxBeef"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Beef" />
                        
                        <CheckBox
                            android:id="@+id/checkboxVegetarian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Vegetarian" />
                        
                        <CheckBox
                            android:id="@+id/checkboxChicken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Chicken" />
                        
                        <CheckBox
                            android:id="@+id/checkboxHalal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Halal" />
                        
                        <CheckBox
                            android:id="@+id/checkboxFish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Fish" />
                        
                        <CheckBox
                            android:id="@+id/checkboxDairyFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Dairy Free" />
                        
                        <CheckBox
                            android:id="@+id/checkboxShellfish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Shellfish" />
                        
                        <CheckBox
                            android:id="@+id/checkboxGlutenFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Gluten Free" />
                        
                        <CheckBox
                            android:id="@+id/checkboxPork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Pork" />
                        
                        <CheckBox
                            android:id="@+id/checkboxPeanutFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Is Peanut Free" />
                        
                        <CheckBox
                            android:id="@+id/checkboxOtherMeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Has Other Meat" />
                    </GridLayout>
                </androidx.cardview.widget.CardView>
            
            </LinearLayout>
        
        
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
